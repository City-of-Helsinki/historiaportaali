<?php

/**
 * @file
 * Contains helhist_search.module.
 */

declare(strict_types=1);

use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Site\Settings;

/**
 * Implements hook_theme().
 */
function helhist_search_theme() {
  return [
    'search_frontend' => [
      'variables' => [],
      'template' => 'search-frontend',
    ],
    'frontpage_search' => [
      'variables' => [
        'form' => NULL,
      ],
      'template' => 'frontpage-search',
    ],
    'header_search' => [
      'variables' => [
        'form' => NULL,
      ],
      'template' => 'header-search',
    ],
    'react_search' => [
      'variables' => [],
      'template' => 'react-search',
    ],
  ];
}

/**
 * Implements hook_form_alter().
 *
 * Clean up URL parameters on the search forms GET requests.
 */
function helhist_search_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if (in_array($form_id, ['helhist_search_header_form', 'helhist_search_frontpage_form'])) {
    $form['form_build_id']['#access'] = FALSE;
    $form['form_id']['#access'] = FALSE;
  }
}

/**
 * Prepares variables for the react search template.
 */
function helhist_search_preprocess_react_search(array &$variables) {
  $variables['ELASTIC_PROXY_URL'] = Settings::get('elasticsearch_proxy_url', '');
}
