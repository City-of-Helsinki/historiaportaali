<div class="map-lift">
  {% embed "@hdbt/misc/container.twig" with {container_element: 'block'} %}
    {% block container_content %}
      <h5 class="map-lift__subtitle">{{ 'Map'|t }}</h5>
      <h3 class="map-lift__title">{{ 'Explore historical places by location'|t }}</h3>
      <p class="map-lift__description">{{ 'You can find historical places and events in Helsinki with our interactive map'|t }}</p>
      <div class="map-lift__image">
        <a href="{{ map_node_url }}">
          <img src="{{ base_path ~ directory }}/src/images/map_comparison.png" alt="" />
        </a>
      </div>
      <a href="{{ map_node_url }}">
        {% include '@hdbt/button/button.html.twig' with { type: 'primary', disabled: false, icon_last: true, icon_last_type: 'arrow-right', label: 'Explore interactive map'|t } %}
      </a>
    {% endblock %}
  {% endembed %}
</div>
