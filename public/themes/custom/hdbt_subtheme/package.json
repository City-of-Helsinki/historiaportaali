{
  "name": "hdbt_subtheme",
  "version": "1.0.0",
  "description": "Webpack configuration for HDBT Subtheme",
  "author": "Druid",
  "license": "MIT",
  "repository": "github:City-of-Helsinki/drupal-hel-platform",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typecheck:warn": "tsc --noEmit || echo 'Warning: TypeScript errors found'",
    "dev": "npm run typecheck:warn && node theme-builder.mjs --watch --dev",
    "build": "npm run typecheck:warn && node theme-builder.mjs",
    "preinstall": "npx update-browserslist-db@latest",
    "lint:scss": "npx postcss \"src/scss/**/*.scss\" --syntax postcss-scss --use css-declaration-sorter --replace --no-map",
    "lint:js": "eslint --fix src/js/ --no-error-on-unmatched-pattern",
    "lint": "npm run lint:scss && npm run lint:js"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@hdbt/theme-builder": "file:../../contrib/hdbt/theme-builder",
    "@sentry/react": "^10.20.0",
    "@splidejs/splide": "^4.1.4",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "breakpoint-sass": "^3.0.0",
    "css-declaration-sorter": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^46.4.3",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^10.0.0",
    "hds-design-tokens": "^2.0.0",
    "hds-react": "^4.8.1",
    "jotai": "^2.15.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.27",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.0",
    "prettier": "^3.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.69.5",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-high-performance-animation": "^1.9.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.0.0",
    "swr": "^2.3.6",
    "tiny-slider": "^2.9.4"
  },
  "browserslist": [
    "last 3 major versions",
    "not dead"
  ],
  "devDependencies": {
    "hyphenopoly": "^6.0.0",
    "read-time-estimate": "^0.0.3",
    "typescript": "^5.9.3"
  }
}
