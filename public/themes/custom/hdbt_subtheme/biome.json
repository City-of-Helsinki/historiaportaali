{
  "files": {
    "include": [
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.scss"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": { "allow": ["error", "info", "warn"] }
        }
      }
    }
  }
}
