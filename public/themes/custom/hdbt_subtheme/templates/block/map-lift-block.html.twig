<div class="map-lift">
  {% embed "@hdbt/misc/container.twig" with {container_element: 'block'} %}
    {% block container_content %}
      <div class="map-lift__subtitle">{{ 'Map'|t }}</div>
      <h2 class="map-lift__title">{{ 'Explore historical places by location'|t }}</h2>
      <p class="map-lift__description">{{ 'You can find historical places and events in Helsinki with our interactive map'|t }}</p>
      <div class="map-lift__image">
        <a href="{{ map_node_url }}">
          <img src="{{ base_path ~ directory }}/src/images/map_comparison.png" alt="" role="presentation" />
          <span class="visually-hidden">{{ 'Go to interactive map'|t }}</span>
        </a>
      </div>
      {% include '@hdbt/navigation/link-button.html.twig' with {
        type: primary,
        label: 'Explore interactive map'|t,
        url: map_node_url,
        icon: true,
        icon_type: map,
      } %}
    {% endblock %}
  {% endembed %}
</div>
