{
  "extends": ["@hdbt/theme-builder/biome"],
  "files": {
    "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "theme-builder/**/*.mjs", "backstop/**/*.js"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": { "allow": ["error", "info", "warn"] }
        }
      }
    }
  }
}
